{
  "private": true,
  "name": "traveler-main",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --minify",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\"",
    "dev:remix": "node -r dotenv/config node_modules/@remix-run/dev/cli.js",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node",
    "deploy": "flyctl deploy --remote-only",
    "start": "remix-serve build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "lint:fix": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --fix --ext js,jsx,ts,tsx ./app/",
    "rg": "routes-gen -d @routes-gen/remix"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@mantine/core": "^3.6.3",
    "@mantine/hooks": "^3.6.3",
    "@mantine/ssr": "^3.6.3",
    "@prisma/client": "^3.9.1",
    "@radix-ui/react-checkbox": "^0.1.4",
    "@radix-ui/react-label": "^0.1.4",
    "@radix-ui/react-switch": "^0.1.4",
    "@radix-ui/react-tooltip": "^0.1.6",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.2.2",
    "framer-motion": "^5.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "redis": "^4.0.2",
    "remix": "^1.1.1",
    "remix-auth": "^3.2.1",
    "remix-auth-form": "^1.1.1",
    "routes-gen": "^0.3.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@routes-gen/remix": "^0.2.10",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/parser": "^5.10.0",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "dotenv": "^14.2.0",
    "eslint": "^8.7.0",
    "eslint-config-kentcdodds": "^20.0.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "prettier-plugin-tailwindcss": "^0.1.3",
    "prisma": "^3.9.1",
    "tailwindcss": "^3.0.11",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "server-build",
    "build",
    "public/build",
    "*.ignored/",
    "*.ignored.*"
  ]
}
